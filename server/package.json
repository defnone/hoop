  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@eslint/js": "^9.31.0",
    "@types/bun": "latest",
    "@vitest/coverage-v8": "^3.2.4",
    "drizzle-kit": "^0.31.4",
